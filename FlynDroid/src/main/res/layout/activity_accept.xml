<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/activity_accept"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical">
		
		<ScrollView
			android:id="@+id/accept_view"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:orientation="vertical">
		    
				<TextView
					android:id="@+id/accept_info"
		            android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:text="" />
			
			</LinearLayout>
			
		</ScrollView>

		<WebView
			android:id="@+id/accept_webview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:visibility="gone"/>
		
	</LinearLayout>


	
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
	    android:orientation="horizontal">

		<com.acentria.benslist.elements.FlyButton
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="44dp"
			android:layout_marginRight="10dip"
			android:layout_marginEnd="10dip"
			android:text="android_dialog_cancel"
			android:background="@drawable/shape_button_grey"
			style="@style/orange_button" />

		<com.acentria.benslist.elements.FlyButton
			android:id="@+id/accept"
			android:layout_width="0dip"
			android:layout_height="44dp"
			android:layout_weight="1"
			android:text="android_i_accept"
			android:background="@drawable/shape_button"
			android:layout_marginBottom="15dip"
			style="@style/orange_button" />
        
    </LinearLayout>
    
</LinearLayout>