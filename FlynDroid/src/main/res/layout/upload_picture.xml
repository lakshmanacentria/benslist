<?xml version="1.0" encoding="utf-8"?>
<com.acentria.benslist.adapters.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/featured_item"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#e0e0e0"
	android:gravity="center">

	<ImageView
	    android:id="@+id/image"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/featured_loading"
	    android:scaleType="centerCrop" />
	
	<RelativeLayout
	    android:id="@+id/primary"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:visibility="invisible"
	    android:background="@color/transparent_dark_bar">

	    <LinearLayout
	        android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingTop="2dp"
	        android:paddingBottom="4dp"
	        android:paddingRight="9dp"
	        android:paddingLeft="9dp">
	
		    <com.acentria.benslist.elements.FlyTextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="primary_picture"
		        android:ellipsize="end"
		        android:singleLine="true"
		        style="@style/featured_box_title" />
	    
	    </LinearLayout>
	    
	</RelativeLayout>

</com.acentria.benslist.adapters.SquareLayout>