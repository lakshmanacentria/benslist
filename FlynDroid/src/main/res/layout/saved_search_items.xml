<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_below="@id/divider"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/listing_border"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingTop="3dp"
		android:paddingLeft="7dp"
		android:paddingStart="7dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/search_fields"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/search_title"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Motors/Cars"
					android:textSize="19sp"
					android:ellipsize="end"
					android:singleLine="true"
					android:textColor="#111111"/>

				<TextView
					android:id="@+id/search_values"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Audi, A3, 2005, automatic"
					android:textSize="12sp"
					android:textColor="#111111"/>

			</LinearLayout>


			<TextView
				android:id="@+id/search_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="35"
				android:textSize="17dp"
				android:visibility="gone"
				style="@style/price"
				android:layout_marginTop="0dp" />

			<ImageView
				android:id="@+id/icon_action"
				style="@style/grid_like"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="0dp"
				android:clickable="true"
				android:background="@drawable/icon_action_state" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="15dp"
			android:paddingBottom="5dp"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/search_date"
				android:text="22 jul 2017"
				android:textSize="12sp"
				android:textColor="#666666"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />


			<TextView
				android:id="@+id/search_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="active"
				android:paddingLeft="15dp"
				android:paddingStart="15dp"
				android:textSize="12sp"
				style="@style/status_active" />

		</LinearLayout>

	</LinearLayout>
    
</RelativeLayout>