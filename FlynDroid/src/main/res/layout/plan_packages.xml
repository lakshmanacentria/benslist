<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	style="@style/content_side_padding">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/plan_border"
		android:layout_marginBottom="5dp"
	    android:paddingBottom="1dip">

	    <LinearLayout
		    android:id="@+id/color"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="7dip"
		    android:paddingStart="7dip"
		    android:background="@color/plan_default_color">

		    <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="#B3FFFFFF">

		        <LinearLayout
		            android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="vertical"
		            android:paddingLeft="15dp"
		            android:paddingStart="15dp"
				    android:paddingRight="15dp"
				    android:paddingEnd="15dp"
				    android:paddingTop="10dp"
				    android:paddingBottom="10dp">

		            <LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal">

					    <TextView
					        android:id="@+id/title"
					        android:layout_width="0dip"
					    	android:layout_height="wrap_content"
					    	android:layout_weight="1"
							android:text="Packages"
							android:paddingRight="10dip"
							android:paddingEnd="10dip"
							android:textColor="#111111"
							android:textSize="19sp"
					    	android:maxLines="2"
					    	android:ellipsize="end"
					    	android:textStyle="bold" />

					    <TextView
			                android:id="@+id/price"
			                android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:textColor="#af5300"
					    	android:textSize="19sp"
					    	android:textStyle="bold"
					    	android:text="Free" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/packages_info"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/exiredRow">

							<TextView
								android:id="@+id/expired_plan_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="12sp"
								android:textColor="#4d9500"
								android:paddingRight="5dp"
								android:paddingEnd="5dp"
								android:text="expired: "/>

							<TextView
								android:id="@+id/expired_plan"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#4d9500"
								android:textSize="12sp"
								android:text="unlim"/>

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="10dip"
						android:orientation="horizontal">

						<LinearLayout
							android:id="@+id/photo"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="18dip"
							android:layout_marginEnd="18dp"
							android:visibility="gone">

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:paddingRight="8dip"
								android:paddingEnd="8dip"
								android:src="@mipmap/plan_photo" />

							<TextView
								android:tag="text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#111111"
								android:textSize="19sp"
								android:textStyle="bold"
								android:maxLines="1"
								android:ellipsize="end"
								android:text="5" />

						</LinearLayout>

						<LinearLayout
							android:id="@+id/video"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="18dp"
							android:layout_marginEnd="18dp"
							android:visibility="gone">

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:paddingRight="8dip"
								android:paddingEnd="8dip"
								android:src="@mipmap/plan_video" />

							<TextView
								android:tag="text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#111111"
								android:textSize="19sp"
								android:textStyle="bold"
								android:maxLines="1"
								android:ellipsize="end"
								android:text="5" />

						</LinearLayout>

						<LinearLayout
							android:id="@+id/listing_live"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:paddingRight="8dip"
								android:paddingEnd="8dip"
								android:src="@mipmap/plan_live" />

							<TextView
								android:tag="text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#111111"
								android:textSize="19sp"
								android:textStyle="bold"
								android:maxLines="1"
								android:text="5" />

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="9dp"
					android:paddingStart="9dp"
					android:paddingRight="15dp"
					android:paddingEnd="15dp"
					android:paddingTop="15dp"
					android:paddingBottom="15dp"
					android:background="#fff"
					android:orientation="horizontal">

					<RadioGroup
						android:id="@+id/radio_group"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical|left">

						<RadioButton
							android:id="@+id/plan"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />

					</RadioGroup>

					<LinearLayout
						android:id="@+id/group_info"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_marginLeft="5dp"
						android:gravity="center"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:id="@+id/standardRow">

							<TextView
								android:id="@+id/standard_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="12sp"
								android:textColor="#666666"
								android:text="standard"/>

							<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal">

								<TextView
									android:id="@+id/standard"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textColor="#000000"
									android:text="1"/>

								<TextView
									android:id="@+id/standard_number"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textColor="#000000"
									android:paddingTop="1dp"
									android:paddingLeft="3dp"
									android:paddingStart="3dp"
									android:textSize="9dp"
									android:text="of 5"
									android:visibility="gone"
									android:layout_gravity="top|bottom" />

							</LinearLayout>

						</LinearLayout>

						<View
							android:id="@+id/spliter"
							android:layout_width="1dip"
							android:layout_height="fill_parent"
							android:layout_marginLeft="24dp"
							android:layout_marginRight="24dp"
							android:background="#d4d4d4"/>

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:id="@+id/featuredRow">

							<TextView
								android:id="@+id/featured_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="12sp"
								android:textColor="#666666"
								android:text="featured:"/>

							<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal">

								<TextView
									android:id="@+id/featured"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textColor="#000000"
									android:text="1"/>

								<TextView
									android:id="@+id/featured_number"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textColor="#000000"
									android:paddingTop="1dp"
									android:paddingLeft="3dp"
									android:paddingStart="3dp"
									android:textSize="9dp"
									android:text="of 5"
									android:visibility="gone"
									android:layout_gravity="top|bottom" />

							</LinearLayout>

						</LinearLayout>

					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<com.acentria.benslist.elements.FlyButton
							android:id="@+id/renew"
							android:layout_width="match_parent"
							android:layout_height="44dp"
							android:text="android_renew"
							android:visibility="gone"
							android:background="@drawable/shape_button"
							style="@style/orange_button" />

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/subscription_box"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:visibility="gone"
					android:orientation="horizontal"
					android:padding="5dp">

					<TextView
						android:id="@+id/subscription_desc"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#484848" />

					<CheckBox
						android:id="@+id/subscription"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:text="subscription"/>

				</LinearLayout>
												
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>